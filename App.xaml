<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:JournalApp"
             x:Class="JournalApp.App">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Color resources -->
            <!-- Outer page background (blue) -->
            <Color x:Key="PageBackgroundColor">#1E88E5</Color>
            <!-- Inner card background (white) -->
            <Color x:Key="CardBackgroundColor">White</Color>
            <!-- Button / accent color (darker blue) -->
            <Color x:Key="PrimaryColor">#0D47A1</Color>
            <!-- Text colors (blue palette) -->
            <Color x:Key="PrimaryTextColor">#0D47A1</Color>
            <Color x:Key="SecondaryTextColor">#64B5F6</Color>

            <!-- Page style -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{DynamicResource PageBackgroundColor}" />
            </Style>

            <!-- Headings -->
            <Style x:Key="TitleLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <!-- Normal labels -->
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            </Style>

            <!-- Text inputs -->
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            </Style>

            <Style TargetType="Editor">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            </Style>

            <!-- Buttons -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="12,6" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
