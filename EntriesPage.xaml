<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JournalApp.EntriesPage"
             Title="My Entries">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12"
                             BackgroundColor="{DynamicResource CardBackgroundColor}">
            <Label Text="My Entries" Style="{StaticResource TitleLabelStyle}" />

            <!-- Search & filter -->
            <Entry x:Name="SearchEntry" Placeholder="Search by title or content" />
            <Picker x:Name="MoodFilterPicker" Title="Filter by mood (optional)" />

            <CollectionView x:Name="EntriesCollectionView"
                            SelectionMode="Single"
                            HeightRequest="400">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,4" Padding="10" BackgroundColor="{DynamicResource CardBackgroundColor}"
                               BorderColor="{DynamicResource PrimaryColor}" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding EntryDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Title}" />
                                <Label Text="{Binding PrimaryMood}" FontAttributes="Italic" />
                                <Label Text="{Binding Tags}" FontSize="12" TextColor="{DynamicResource SecondaryTextColor}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
