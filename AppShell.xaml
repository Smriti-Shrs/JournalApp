<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JournalApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JournalApp"
    FlyoutBehavior="Locked"
    FlyoutBackgroundColor="#f1f5f9"
    >
    
    <Shell.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="#0f172a" />
            <Setter Property="FontFamily" Value="Arial" />
        </Style>
    </Shell.Resources>
    
    <!-- App Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="#6366f1" Padding="16,12">
            <Label Text="ðŸ“” JournalApp" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   VerticalOptions="Center" />
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Navigation items styling -->
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="16,12" BackgroundColor="Transparent">
                <Label Text="{Binding Title}" 
                       TextColor="#0f172a" 
                       FontAttributes="None" 
                       FontSize="15" 
                       VerticalOptions="Center" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <!-- Left-side navigation like the screenshot -->
    <FlyoutItem Title="Dashboard">
        <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate local:DashboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="My Entries">
        <ShellContent Title="My Entries" ContentTemplate="{DataTemplate local:EntriesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="New Entry">
        <ShellContent Title="New Entry" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Calendar">
        <ShellContent Title="Calendar" ContentTemplate="{DataTemplate local:CalendarPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Analytics">
        <ShellContent Title="Analytics" ContentTemplate="{DataTemplate local:AnalyticsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>

</Shell>
