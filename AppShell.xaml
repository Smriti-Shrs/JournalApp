<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JournalApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JournalApp"
    FlyoutBehavior="Locked"
    FlyoutBackgroundColor="#0D47A1"
    >

    <!-- Left-side navigation like the screenshot -->
    <FlyoutItem Title="Dashboard">
        <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate local:DashboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="My Entries">
        <ShellContent Title="My Entries" ContentTemplate="{DataTemplate local:EntriesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="New Entry">
        <ShellContent Title="New Entry" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Calendar">
        <ShellContent Title="Calendar" ContentTemplate="{DataTemplate local:CalendarPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Analytics">
        <ShellContent Title="Analytics" ContentTemplate="{DataTemplate local:AnalyticsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>

</Shell>
