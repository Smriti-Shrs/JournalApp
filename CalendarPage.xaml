<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JournalApp.CalendarPage"
             Title="Calendar">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Calendar View" Style="{StaticResource TitleLabelStyle}" />

            <!-- Month navigation -->
            <Grid ColumnDefinitions="Auto,*,Auto" Padding="0,10">
                <Button Text="◀ Previous" Clicked="OnPreviousMonthClicked" />
                <Label Grid.Column="1" x:Name="MonthLabel" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold" />
                <Button Grid.Column="2" Text="Next ▶" Clicked="OnNextMonthClicked" />
            </Grid>

            <!-- Day-of-week header -->
            <Grid ColumnDefinitions="*,*,*,*,*,*,*" Padding="0,5">
                <Label Text="Sun" HorizontalOptions="Center" />
                <Label Grid.Column="1" Text="Mon" HorizontalOptions="Center" />
                <Label Grid.Column="2" Text="Tue" HorizontalOptions="Center" />
                <Label Grid.Column="3" Text="Wed" HorizontalOptions="Center" />
                <Label Grid.Column="4" Text="Thu" HorizontalOptions="Center" />
                <Label Grid.Column="5" Text="Fri" HorizontalOptions="Center" />
                <Label Grid.Column="6" Text="Sat" HorizontalOptions="Center" />
            </Grid>

            <!-- Calendar grid: 7 columns, 6 rows -->
            <CollectionView x:Name="CalendarCollectionView"
                            SelectionMode="Single"
                            SelectionChanged="OnDaySelected">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="7" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="4">
                            <Frame HasShadow="False"
                                   CornerRadius="8"
                                   Padding="4"
                                   BackgroundColor="{Binding BackgroundColor}">
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="{Binding DayNumber}" HorizontalOptions="Center" />
                                    <Label Text="{Binding MoodEmoji}" FontSize="12" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Info for selected day -->
            <Label x:Name="SelectedDateLabel" Text="Select a date to see entry info." Margin="0,10,0,0" />

            <!-- Mood legend -->
            <Label Text="Mood Legend:" FontAttributes="Bold" Margin="0,20,0,0" />
            <HorizontalStackLayout Spacing="15">
                <HorizontalStackLayout Spacing="4">
                    <BoxView Color="#A5D6A7" WidthRequest="16" HeightRequest="16" CornerRadius="4" />
                    <Label Text="Positive Mood" FontSize="12" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="4">
                    <BoxView Color="#90CAF9" WidthRequest="16" HeightRequest="16" CornerRadius="4" />
                    <Label Text="Neutral Mood" FontSize="12" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="4">
                    <BoxView Color="#EF9A9A" WidthRequest="16" HeightRequest="16" CornerRadius="4" />
                    <Label Text="Negative Mood" FontSize="12" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="4">
                    <BoxView Color="#FFF59D" WidthRequest="16" HeightRequest="16" CornerRadius="4" />
                    <Label Text="Today" FontSize="12" />
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
