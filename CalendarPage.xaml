<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JournalApp.CalendarPage"
             Title="Calendar"
             BackgroundColor="#f8fafc">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <!-- Month navigation -->
            <Frame Padding="12" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                <Grid ColumnDefinitions="Auto,*,Auto" Padding="0">
                    <Button Text="◀ Previous" Clicked="OnPreviousMonthClicked" BackgroundColor="#06b6d4" TextColor="White" />
                    <Label Grid.Column="1" x:Name="MonthLabel" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold" FontSize="16" TextColor="#0f172a" />
                    <Button Grid.Column="2" Text="Next ▶" Clicked="OnNextMonthClicked" BackgroundColor="#06b6d4" TextColor="White" />
                </Grid>
            </Frame>

            <!-- Day-of-week header -->
            <Grid ColumnDefinitions="*,*,*,*,*,*,*" Padding="0,5" RowSpacing="4">
                <Label Text="Sun" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#6366f1" />
                <Label Grid.Column="1" Text="Mon" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#6366f1" />
                <Label Grid.Column="2" Text="Tue" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#6366f1" />
                <Label Grid.Column="3" Text="Wed" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#6366f1" />
                <Label Grid.Column="4" Text="Thu" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#6366f1" />
                <Label Grid.Column="5" Text="Fri" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#6366f1" />
                <Label Grid.Column="6" Text="Sat" HorizontalOptions="Center" FontAttributes="Bold" TextColor="#6366f1" />
            </Grid>

            <!-- Calendar grid: 7 columns, 6 rows -->
            <CollectionView x:Name="CalendarCollectionView"
                            SelectionMode="Single"
                            SelectionChanged="OnDaySelected">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="7" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="4">
                            <Frame HasShadow="True"
                                   CornerRadius="8"
                                   Padding="8"
                                   BackgroundColor="{Binding BackgroundColor}">
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="2">
                                    <Label Text="{Binding DayNumber}" HorizontalOptions="Center" FontAttributes="Bold" />
                                    <Label Text="{Binding MoodEmoji}" FontSize="14" HorizontalOptions="Center" />
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Info for selected day -->
            <Label x:Name="SelectedDateLabel" Text="Select a date to see entry info." Margin="0,10,0,0" />

            <!-- Mood legend -->
            <Label Text="Mood Legend:" FontAttributes="Bold" Margin="0,20,0,0" />
            <HorizontalStackLayout Spacing="15">
                <HorizontalStackLayout Spacing="4">
                    <BoxView Color="#A5D6A7" WidthRequest="16" HeightRequest="16" CornerRadius="4" />
                    <Label Text="Positive Mood" FontSize="12" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="4">
                    <BoxView Color="#90CAF9" WidthRequest="16" HeightRequest="16" CornerRadius="4" />
                    <Label Text="Neutral Mood" FontSize="12" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="4">
                    <BoxView Color="#EF9A9A" WidthRequest="16" HeightRequest="16" CornerRadius="4" />
                    <Label Text="Negative Mood" FontSize="12" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="4">
                    <BoxView Color="#FFF59D" WidthRequest="16" HeightRequest="16" CornerRadius="4" />
                    <Label Text="Today" FontSize="12" />
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
