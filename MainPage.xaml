<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JournalApp.MainPage"
             Title="JournalApp">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Light/Dark" Priority="0" Order="Primary" Clicked="OnToggleThemeClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12"
                             BackgroundColor="{DynamicResource CardBackgroundColor}">
            <Label Text="JournalApp" Style="{StaticResource TitleLabelStyle}" />

            <!-- Calendar / date selection (one entry per day) -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="Entry Date:" VerticalOptions="Center" />
                <DatePicker x:Name="EntryDatePicker"
                            HorizontalOptions="StartAndExpand" />
            </HorizontalStackLayout>

            <!-- Title -->
            <Frame BackgroundColor="White" BorderColor="{DynamicResource PrimaryColor}" CornerRadius="10" Padding="6">
                <Entry x:Name="TitleEntry"
                       Placeholder="Title"
                       FontAttributes="Bold"
                       BackgroundColor="Transparent" />
            </Frame>

            <!-- Mood selection -->
            <Label Text="Primary Mood (required)" />
            <Picker x:Name="PrimaryMoodPicker"
                    Title="Select primary mood" />

            <Label Text="Secondary Moods (optional, up to 2)" />
            <HorizontalStackLayout Spacing="10">
                <Picker x:Name="SecondaryMood1Picker"
                        Title="Secondary mood 1" />
                <Picker x:Name="SecondaryMood2Picker"
                        Title="Secondary mood 2" />
            </HorizontalStackLayout>

            <!-- Tags -->
            <Label Text="Tags (comma-separated, e.g. Work, Health)" />
            <Frame BackgroundColor="White" BorderColor="{DynamicResource PrimaryColor}" CornerRadius="10" Padding="6">
                <Entry x:Name="TagsEntry" Placeholder="Work, Health, Travel" BackgroundColor="Transparent" />
            </Frame>

            <!-- Content editor -->
            <Label Text="Entry" />
            <Frame BackgroundColor="White" BorderColor="{DynamicResource PrimaryColor}" CornerRadius="10" Padding="6">
                <Editor x:Name="EntryEditor"
                        Placeholder="Write your journal entry here..."
                        AutoSize="TextChanges"
                        HeightRequest="200"
                        BackgroundColor="Transparent" />
            </Frame>

            <!-- Actions -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button x:Name="SaveButton"
                        Text="Save / Update"
                        Clicked="OnSaveClicked" />
                <Button x:Name="DeleteButton"
                        Text="Delete"
                        Clicked="OnDeleteClicked" />
            </HorizontalStackLayout>

            <!-- Past entries list (simple timeline / list view) -->
            <Label Text="Previous Entries"
                   FontAttributes="Bold"
                   Margin="0,20,0,0" />

            <CollectionView x:Name="EntriesCollectionView"
                            SelectionMode="Single"
                            SelectionChanged="OnEntrySelected"
                            HeightRequest="250">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" ColumnDefinitions="Auto,*">
                            <Label Text="{Binding EntryDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                   FontAttributes="Bold"
                                   Margin="0,0,10,0" />
                            <Label Grid.Column="1"
                                   Text="{Binding Title}"
                                   LineBreakMode="TailTruncation" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
